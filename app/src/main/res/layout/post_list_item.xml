<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="50dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageViewPost"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textTitle"/>
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@+id/imageViewPost"
                app:layout_constraintStart_toEndOf="@+id/imageUser"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textBody"/>
            <TextView
                android:id="@+id/textBody"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                app:layout_constraintTop_toBottomOf="@+id/imageViewPost"
                app:layout_constraintBottom_toTopOf="@+id/textTime"
                app:layout_constraintStart_toEndOf="@+id/imageUser"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/imageUser"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="@+id/textTitle"
                app:layout_constraintBottom_toBottomOf="@+id/textBody"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:drawableStart="@drawable/ic_time"
                app:layout_constraintTop_toBottomOf="@+id/textBody"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>